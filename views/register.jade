extends layout/page

block content
    .container
        .row
            form.col-sm-offset-2.col-sm-6.form-horizontal(role="form", name="RegisterForm")
                .form-group.required
                    label.col-sm-4.control-label(for="username") First Name
                    .col-sm-8
                        input.form-control(type="text", id="username", name="username", placeholder="Enter username", required)
                .form-group.required
                    label.col-sm-4.control-label(for="password") Password
                    .col-sm-8
                        input.form-control(type="password", id="password", name="password", placeholder="Enter password", required)
                .form-group.required
                    label.col-sm-4.control-label(for="email") Email
                    .col-sm-8
                        input.form-control(type="email", id="email", name="email", placeholder="Enter email", required)

                .form-group.required
                    label.col-sm-4.control-label(for="phone") Phone
                    .col-sm-8
                        input.form-control(type="text", pattern="^(?:0|\(?\+33\)?\s?|0033\s?)[1-79](?:[\.\-\s]?\d\d){4}$",
                        id="phone", name="phone",placeholder="Enter phone", required)
                        span.help-block.errorPhone

                .errorResponse.col-sm-offset-4.help-block

                .form-group
                    .col-sm-offset-4.col-sm-10
                        button.btn.btn-primary(type="submit") Регистрация



